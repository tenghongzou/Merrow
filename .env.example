# Copy to .env or .env.local and fill values.

# General
MERROW_MODE=backtest
MERROW_SYMBOL=BTCUSDT
MERROW_EXCHANGE=binance
MERROW_LOG=info
MERROW_LOG_FORMAT=plain
MERROW_METRICS_PATH=output/metrics.prom
MERROW_UI_ADDR=127.0.0.1:8088

# PGSQL persistence
MERROW_PG_ENABLED=0
MERROW_PG_INIT_SCHEMA=1
MERROW_POSTGRES_DSN=postgres://user:pass@localhost:5432/merrow

# Live retry/backoff
MERROW_LIVE_RETRY_MAX=3
MERROW_LIVE_RETRY_BASE_MS=500
MERROW_LIVE_RETRY_MAX_DELAY_MS=8000
MERROW_LIVE_RETRY_JITTER_PCT=20

# Paper mode state
MERROW_PAPER_STATE_PATH=output/paper_state.json

# Binance
MERROW_BINANCE_API_KEY=your_key
MERROW_BINANCE_API_SECRET=your_secret
MERROW_BINANCE_BASE_URL=https://api.binance.com
MERROW_BINANCE_RECV_WINDOW=5000

# Bybit
MERROW_BYBIT_API_KEY=your_key
MERROW_BYBIT_API_SECRET=your_secret
MERROW_BYBIT_BASE_URL=https://api.bybit.com
MERROW_BYBIT_RECV_WINDOW=5000
MERROW_BYBIT_ACCOUNT_TYPE=UNIFIED

# OKX
MERROW_OKX_API_KEY=your_key
MERROW_OKX_API_SECRET=your_secret
MERROW_OKX_PASSPHRASE=your_passphrase
MERROW_OKX_BASE_URL=https://www.okx.com

# Cash asset override (when quote asset cannot be inferred)
MERROW_CASH_ASSET=USDT
